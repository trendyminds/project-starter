{
  "name": "pura",
  "version": "5.0.0",
  "scripts": {
    "precommit": "lint-staged",
    "test": "./tasks/subtasks/lint.sh",
    "deploy": "./tasks/deploy.sh",
    "start": "./tasks/watch.sh",
    "build": "./tasks/build.sh",
    "dev": "npm start"
  },
  "lint-staged": {
    "./src/assets/scripts/**/*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^8.1.0",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "browser-sync": "^2.23.6",
    "clean-css-cli": "^4.1.11",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.7.0",
    "globby": "^6.1.0",
    "husky": "^0.14.3",
    "imagemin": "5.1.2",
    "imagemin-jpegtran": "^5.0.2",
    "imagemin-pngquant": "^5.0.1",
    "imagemin-svgo": "^6.0.0",
    "lint-staged": "^7.1.3",
    "node-version-assets": "^1.2.0",
    "postcss-cli": "^5.0.0",
    "postcss-color-function": "^4.0.0",
    "postcss-easy-import": "^3.0.0",
    "postcss-hexrgba": "^1.0.0",
    "postcss-mixins": "^6.0.1",
    "postcss-nested": "^3.0.0",
    "postcss-simple-vars": "^4.0.0",
    "prettier": "1.13.4",
    "stylelint": "^9.1.1",
    "stylelint-trendyminds-standard": "^2.1.0",
    "webpack": "^3.3.0"
  },
  "dependencies": {
    "normalize.css": "^8.0.0",
    "picturefill": "^3.0.2",
    "promise-polyfill": "^7.0.0",
    "prop-types": "^15.6.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "browserslist": [
    "last 2 versions"
  ],
  "babel": {
    "presets": [
      "env"
    ],
    "plugins": [
      "transform-react-jsx"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb"
    ],
    "plugins": [
      "prettier"
    ],
    "env": {
      "browser": true,
      "node": true
    },
    "globals": {
      "$": true,
      "System": true
    },
    "rules": {
      "prettier/prettier": "error",
      "quotes": [
        "error",
        "double"
      ],
      "no-console": 0,
      "no-new": 0,
      "comma-dangle": 0,
      "func-names": 0,
      "new-cap": [
        "error",
        {
          "newIsCapExceptionPattern": "^module"
        }
      ],
      "react/no-unescaped-entities": 0,
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-trendyminds-standard"
  }
}
